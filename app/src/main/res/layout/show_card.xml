<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        android:focusable="false"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="2dp"
        card_view:cardBackgroundColor="@color/cardview_dark_background"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants">
            <ImageView
                android:id="@+id/rating"
                android:layout_marginTop="2dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star5"
                android:paddingRight="14dip"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" />
            <TextView
                android:id="@+id/ArtistText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/rating"
                android:textSize="@dimen/text_height_small"
                android:textColor="@color/secondary_text_color_light"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="14dip"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text="test"/>

            <TextView
                android:id="@+id/ShowText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_height_tall"
                android:textColor="@color/primary_text_color_light"
                android:paddingLeft="14dip"
                android:paddingRight="14dip"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/ArtistText"
                android:text="test"
                android:scrollHorizontally="false"
                android:ellipsize="none"/>

            <TextView
                android:id="@+id/SourceText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_height_small"
                android:textColor="@color/hint_text_color_light"
                android:paddingLeft="14dip"
                android:paddingRight="14dip"
                android:layout_alignParentLeft="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:lines="1"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:layout_below="@id/ShowText"
                android:text="test"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>