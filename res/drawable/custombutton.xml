<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="#BBBBBB"
                android:startColor="#AACCCCCC"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#DDDD00" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#000000"
                android:endColor="#AA444444"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#127DD4" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>
    
     <item android:state_enabled="false" >
        <shape>
            <gradient
                android:endColor="#BBBBBB"
                android:startColor="#AACCCCCC"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#555555" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="#000000"
                android:endColor="#AA444444"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#127DD4" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>
</selector>