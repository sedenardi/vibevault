<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#000000">
	<TextView
		android:id="@+id/HomeHeader"
		android:textSize="@dimen/heading_size"
		android:gravity="center"
		android:text="@string/vibe_vault_app_title_vertical"
		android:textColor="#127DD4"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="@dimen/home_buffer_small"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		/>
			<ImageView android:id="@+id/separator1" 
			 android:background="#127DD4" 
			 android:layout_width="fill_parent"
			 android:layout_height="2dip"
			 android:layout_toRightOf="@id/HomeHeader"
			 android:layout_alignRight="@id/HomeFeatured"
			 android:layout_centerVertical="true">
	</ImageView>
			<ImageButton
		android:id="@+id/HomeSearch"
		android:layout_width="@dimen/home_icon_heightwidth"
		android:layout_height="@dimen/home_icon_heightwidth"
		android:background="@drawable/searchbutton"
		android:layout_marginTop="@dimen/home_buffer_large"
		android:layout_marginRight="@dimen/home_buffer_medium"
		
		android:layout_alignParentTop="true"
		android:layout_toRightOf="@id/HomeHeader"
		/>
	<ImageButton
		android:id="@+id/HomeRecent"
		android:layout_width="@dimen/home_icon_heightwidth"
		android:layout_height="@dimen/home_icon_heightwidth"
		android:background="@drawable/recentshowsbutton"
		android:layout_marginRight="@dimen/home_buffer_medium"
		android:layout_above="@+id/ButtonLabel2"
		android:layout_toRightOf="@id/HomeHeader"
		/>
		<ImageView android:id="@+id/separator2" 
			 android:background="#127DD4" 
			 android:layout_width="2dip"
			 android:layout_height="fill_parent"
			 android:layout_toRightOf="@+id/HomeSearch">
	</ImageView>
	<ImageButton
		android:id="@+id/HomeDownload"
		android:layout_width="@dimen/home_icon_heightwidth"
		android:layout_height="@dimen/home_icon_heightwidth"
		android:background="@drawable/downloadsbutton"
				android:layout_marginRight="@dimen/home_buffer_medium"
				android:layout_marginLeft="@dimen/home_buffer_medium"
		
		android:layout_marginTop="@dimen/home_buffer_large"
		android:layout_alignParentTop="true"
		android:layout_toRightOf="@id/HomeSearch"
		/>
	<ImageButton
		android:id="@+id/HomePlaying"
		android:layout_width="@dimen/home_icon_heightwidth"
		android:layout_height="@dimen/home_icon_heightwidth"
		android:background="@drawable/nowplayingbutton"
						android:layout_marginRight="@dimen/home_buffer_medium"
				android:layout_marginLeft="@dimen/home_buffer_medium"
						android:layout_above="@+id/ButtonLabel4"
				
		android:layout_toRightOf="@id/HomeRecent"
		/>
			<ImageView android:id="@+id/separator3" 
			 android:background="#127DD4" 
			 android:layout_width="2dip"
			 android:layout_height="fill_parent"
			 android:layout_toRightOf="@+id/HomeDownload">
	</ImageView>
			<ImageButton
		android:id="@+id/HomeFeatured"
		android:layout_width="@dimen/home_icon_heightwidth"
		android:layout_height="@dimen/home_icon_heightwidth"
		android:layout_marginTop="@dimen/home_buffer_large"
		android:background="@drawable/featuredbutton"
				android:layout_marginLeft="@dimen/home_buffer_medium"
		android:layout_toRightOf="@id/HomeDownload"
		android:layout_alignParentTop="true"
		/>
		<ImageButton
		android:id="@+id/HomeBrowse"
		android:layout_width="@dimen/home_icon_heightwidth"
		android:layout_height="@dimen/home_icon_heightwidth"
		android:background="@drawable/browsebutton"
				android:layout_marginLeft="@dimen/home_buffer_medium"
						android:layout_above="@+id/ButtonLabel5"
				
		android:layout_toRightOf="@id/HomePlaying"
		/>
				<TextView
		    android:id="@+id/ButtonLabel1"
		    android:layout_width="@dimen/home_icon_heightwidth"
		    android:layout_height="wrap_content"
		    android:text="@string/Search"
		    android:textSize="@dimen/text_height_small"
		    android:textStyle="bold"
		    android:layout_below="@id/HomeSearch"
		    android:layout_alignLeft="@id/HomeSearch"
		    android:gravity="center_horizontal"
		    android:textColor="#FFFFFFFF">
		</TextView>
		<TextView
		    android:id="@id/ButtonLabel2"
		    android:layout_width="@dimen/home_icon_heightwidth"
		    android:layout_height="wrap_content"
		    android:text="@string/Your_Shows"
		    android:textSize="@dimen/text_height_small"
		    android:textStyle="bold"
		    		android:layout_alignParentBottom="true"
		android:layout_marginBottom="@dimen/home_buffer_large"
		    android:layout_alignLeft="@id/HomeRecent"
		    android:gravity="center_horizontal"
		    android:textColor="#FFFFFFFF"
		    >
		</TextView>
		<TextView
		    android:id="@+id/ButtonLabel3"
		    android:layout_width="@dimen/home_icon_heightwidth"
		    android:layout_height="wrap_content"
		    android:text="@string/Downloads"
		    android:textSize="@dimen/text_height_small"
		    android:textStyle="bold"
		    android:layout_below="@id/HomeDownload"
		    android:layout_alignLeft="@id/HomeDownload"
		    android:gravity="center_horizontal"
		    android:textColor="#FFFFFFFF">
		</TextView>
		<TextView
		    android:id="@id/ButtonLabel4"
		    android:layout_width="@dimen/home_icon_heightwidth"
		    android:layout_height="wrap_content"
		    android:text="@string/Now_Playing"
		    android:textSize="@dimen/text_height_small"
		    android:textStyle="bold"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="@dimen/home_buffer_large"
		    android:layout_alignLeft="@id/HomePlaying"
		    android:gravity="center_horizontal"
		    android:textColor="#FFFFFFFF"
		    >
		</TextView>
		<TextView
		    android:id="@+id/ButtonLabel5"
		    android:layout_width="@dimen/home_icon_heightwidth"
		    android:layout_height="wrap_content"
		    android:text="@string/Browse_Artists"
		    android:textSize="@dimen/text_height_small"
		    android:textStyle="bold"
		    		android:layout_marginBottom="@dimen/home_buffer_large"
		    
		    		android:layout_alignParentBottom="true"
		    android:layout_alignLeft="@id/HomeBrowse"
		    android:gravity="center_horizontal"
		    android:textColor="#FFFFFFFF">
		</TextView>
		<TextView
		    android:id="@+id/ButtonLabel6"
		    android:layout_width="@dimen/home_icon_heightwidth"
		    android:layout_height="wrap_content"
		    android:text="@string/User_Votes"
		    android:textSize="@dimen/text_height_small"
		    android:textStyle="bold"
		    android:layout_below="@id/HomeFeatured"
		    android:layout_alignLeft="@id/HomeFeatured"
		    android:gravity="center_horizontal"
		    android:textColor="#FFFFFFFF">
		</TextView>
